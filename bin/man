use strict;
use warnings;
use Term::ANSIColor;
use FindBin qw($Bin);

our $mandir = "$Bin/../etc/man";

print color 'bold yellow';
print "CHAKORA API MANUAL\n\n";
print color 'reset';

if (!defined($ARGV[0])) {
	print color 'bold blue';
	print "TABLE OF CONTEXT\n";
	
	my @files = <$mandir/*>;
	my $i = 1;
	foreach my $file (sort @files) {
		my @df = split('etc/man/', $file);
		print "$i: $df[1]\n";
		$i += 1;
	}
	print color 'reset';
} else {
	unless (!-e "$mandir/".lc($ARGV[0])) {
		print color 'bold green';
		open FILE, "<$mandir/../man_motd";
		my @lines = <FILE>;
		foreach my $line (@lines) {
			print $line;
		}
		print "\n--- Viewing page: ".lc($ARGV[0])." ---\n";
		print color 'bold blue';
		open FILE, "<$mandir/".lc($ARGV[0]);
		@lines = <FILE>;
		foreach my $line (@lines) {
			print $line;
		}
		undef @lines;
		print color 'bold green';
		print "--- End of page ---\n";
		print color 'reset';
	} else {
		print color 'bold red';
		print "No such page: ".lc($ARGV[0])."\n";
		print color 'reset';
	}
}

print color 'bold yellow';
print "\nEND OF MANUAL\n";
print color 'reset';
